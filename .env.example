# Copy to .env and fill values
DB_BACKEND=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=price_tracker
DB_USER=root
DB_PASSWORD=your_password

# SMTP email notifications for changed prices
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_FROM=no-reply@example.com
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_USE_TLS=1
SMTP_USE_SSL=0

# Mailer provider: smtp or neoserv
MAILER_PROVIDER=smtp

# Optional NeoServ-specific values (used when MAILER_PROVIDER=neoserv)
NEOSERV_SMTP_HOST=smtp.neoserv.example
NEOSERV_SMTP_PORT=465
NEOSERV_SMTP_FROM=no-reply@your-domain.com
NEOSERV_SMTP_USER=neoserv_smtp_username
NEOSERV_SMTP_PASSWORD=neoserv_smtp_password
NEOSERV_SMTP_USE_TLS=0
NEOSERV_SMTP_USE_SSL=1
